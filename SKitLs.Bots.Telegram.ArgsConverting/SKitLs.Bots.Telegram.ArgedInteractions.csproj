<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>$(AssemblyName)</Title>
    <Version>$(AssemblyVersion)</Version>
    <Authors>SKitLs, Sargeras02</Authors>
    <Copyright>Copyright (C) Sargeras02 2023</Copyright>
    <PackageProjectUrl>https://github.com/Sargeras02/SKitLs.Bots.Telegram.git</PackageProjectUrl>
    <PackageIcon>libIcon_AI.png</PackageIcon>
    <PackageTags>Telegram, Bots, Management, Serialization, Argumenting</PackageTags>
    <PackageReleaseNotes>Initial publish.

(+) Added summaries
(~) Names updated</PackageReleaseNotes>
    <AssemblyVersion>1.2.0</AssemblyVersion>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <FileVersion>$(AssemblyVersion)</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="resources\locals\en.arginter.json" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include=".obsolete\ArgedAction.cs" />
    <Compile Include=".obsolete\BotArgInteraction.cs" />
    <Compile Include=".obsolete\BotArgumentClassAttribute.cs" />
    <Compile Include=".obsolete\ConvertResultList.cs" />
    <Compile Include=".obsolete\InteractionArgBase.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\libIcon_AI.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SKitLs.Bots.Telegram.Core" Version="1.4.3" />
    <PackageReference Include="Telegram.Bot" Version="19.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="resources\locals\en.arginter.json" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
